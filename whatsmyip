#! /bin/bash

IP=$(curl -s ifconfig.me)
if (( $? != 0)); then
    IP=$(curl -s checkip.dyndns.com | grep -Eo "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+")
    if (( $? != 0 )); then
        echo -e "Unable to obtain public IP adress.\nNo connection?"
    fi
fi
if [[ "$IP" != "" ]]; then
    echo "Public IP: $IP"
fi
